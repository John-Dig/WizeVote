@{
  Layout = "_Layout";
}

@using Vote.Models

@if (Model.Count == 0)
{
    <div>No topics created yet.</div>
}

<div>
@foreach (Topic topic in Model)
{
    <div>
        <p>@Html.ActionLink($"{topic.Name}","Details", new { id = topic.TopicId })</p>
    </div>
}
</div>

<div>
@Html.ActionLink("Add a topic","Create")
</div>